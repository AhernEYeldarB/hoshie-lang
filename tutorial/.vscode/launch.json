{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "hlcc run",
            "type": "pwa-node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeArgs": [
                "--no-warnings"
            ],
            "program": "${workspaceFolder}/../lib-umd/index.js",
            "cwd": "${workspaceFolder}",
            "args": [
                "run",
                "${relativeFile}"
            ],
            "outFiles": [
                "${workspaceFolder}/lib-umd/**/*.js"
            ]
        }
    ]
}