{
    "name": "hoshi-lang",
    "version": "1.0.0",
    "description": "",
    "main": "./lib-umd/extension.js",
    "scripts": {
        "install-os-deps": "wsl -u root -e apt install antlr4",
        "install-deps": "run-s install-os-deps",
        "clean": "rimraf ./grammar/.antlr ./grammar/*.txt ./src/hlcc/grammar/*.{interp,js,ts,tokens} ./lib-* ./build ./dist",
        "grammar-generate-ts": "antlr4ts -o ./src/hlcc/grammar -visitor ./grammar/HL.g4",
        "grammar-generate": "wsl -e antlr4 -Dlanguage=JavaScript -o ./src/hlcc -lib ./src/hlcc/grammar -visitor ./grammar/HLLexer.g4 ./grammar/HLParser.g4 ",
        "grammar-watch": "watch \"npm run grammar-generate\" ./grammar",
        "compile": "tsc",
        "compile-watch": "run-s \"compile -- -w\"",
        "docs-build-html": "wsl -u root -e jupyter-book build --path-output build/html docs/report/",
        "docs-build-pdf": "wsl -u root -e jupyter-book build --builder pdfhtml --path-output build/pdf docs/report/",
        "docs-build": "run-p docs-build-html docs-build-pdf",
        "build": "run-s grammar-generate compile",
        "watch": "run-p compile-watch grammar-watch",
        "lint": "eslint src/**/*.ts",
        "lint-fix": "eslint --fix src/**/*.ts",
        "test": "./node_modules/.bin/mocha lib-umd/__tests__ --reporter spec",
        "report2word": "wsl -e pandoc -o ./docs/report_do_not_edit.docx ./docs/report.md",
        "word2report": "wsl -e pandoc -o ./docs/readme_do_not_edit.md ./docs/report.docx"
    },
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@hpcc-js/util": "^2.27.0",
        "antlr4": "~4.7.0",
        "yargs": "^16.1.1"
    },
    "devDependencies": {
        "@types/antlr4": "^4.7.2",
        "@types/chai": "^4.1.3",
        "@types/mocha": "^5.2.7",
        "@types/node": "^14.14.10",
        "@types/vscode": "^1.51.0",
        "@types/yargs": "^11.0.0",
        "@typescript-eslint/eslint-plugin": "^4.8.2",
        "@typescript-eslint/parser": "^4.8.2",
        "chai": "^4.2.0",
        "eslint": "^7.14.0",
        "mocha": "^8.2.1",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "typescript": "^4.1.2",
        "watch": "^1.0.2"
    },
    "engines": {
        "vscode": "^1.48.0"
    },
    "activationEvents": [
        "onLanguage:hoshie"
    ],
    "contributes": {
        "languages": [
            {
                "id": "hoshie",
                "aliases": [
                    "Hoshie",
                    "hoshie"
                ],
                "extensions": [
                    ".ho"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "hoshie",
                "scopeName": "source.hoshie",
                "path": "./syntaxes/hoshie.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "ho.checkSyntax",
                "category": "hoshie",
                "title": "Syntax Check",
                "description": "Save and syntax check current file"
            }
        ],
        "menus": {
            "explorer/context": [],
            "editor/context": [
                {
                    "when": "resourceLangId == hoshie && resourceExtname == .ho",
                    "command": "ho.checkSyntax",
                    "group": "navigation@950"
                }
            ],
            "editor/title": [],
            "view/title": [],
            "view/item/context": []
        },
        "keybindings": [
            {
                "command": "ho.checkSyntax",
                "key": "f7",
                "mac": "f7",
                "when": "editorTextFocus && editorLangId == hoshie"
            }
        ],
        "views": {},
        "viewsContainers": {
            "activitybar": [],
            "panel": []
        }
    }
}