{
    "name": "hoshi-lang",
    "version": "1.0.0",
    "description": "",
    "main": "./lib-umd/extension.js",
    "scripts": {
        "install-os-deps": "wsl -u root -e apt install antlr python3-pip pipenv",
        "install-pip-deps": "wsl -u root -e pip3 install -U jupyter-book pyppeteer myst-nb",
        "install-deps": "run-s install-os-deps install-pip-deps",
        "clean": "rimraf ./src/hlcc/grammar ./lib-* ./build ./dist",
        "grammar-generate": "wsl -e antlr4 -Dlanguage=JavaScript -o ./src/hlcc -visitor ./grammar/HL.g4",
        "grammar-watch": "watch \"npm run grammar-generate\" ./grammar",
        "compile": "tsc",
        "compile-watch": "run-s \"compile -- -w\"",
        "docs-build-html": "wsl -u root -e jupyter-book build --path-output build/html docs/report/",
        "docs-build-pdf": "wsl -u root -e jupyter-book build --builder pdfhtml --path-output build/pdf docs/report/",
        "docs-build": "run-p docs-build-html docs-build-pdf",
        "build": "run-s grammar-generate compile",
        "watch": "run-p compile-watch grammar-watch",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "antlr4": "~4.7.2",
        "yargs": "^16.0.3"
    },
    "devDependencies": {
        "@types/node": "^14.11.2",
        "@types/vscode": "^1.48.0",
        "@typescript-eslint/eslint-plugin": "^4.3.0",
        "@typescript-eslint/parser": "^4.3.0",
        "eslint": "^7.10.0",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "typescript": "^4.0.3",
        "watch": "^1.0.2"
    },
    "engines": {
        "vscode": "^1.48.0"
    },
    "activationEvents": [
        "onLanguage:hoshie"
    ],
    "contributes": {
        "languages": [
            {
                "id": "hoshie",
                "aliases": [
                    "Hoshie",
                    "hoshie"
                ],
                "extensions": [
                    ".ho"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "hoshie",
                "scopeName": "source.hoshie",
                "path": "./syntaxes/hoshie.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "extension.helloWorld",
                "title": "Hello World"
            }
        ]
    }
}
